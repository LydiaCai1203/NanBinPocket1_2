<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <FrameLayout 
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/start">
     
    </FrameLayout>
    
    <LinearLayout 
        android:id="@+id/sliding_manu_layout"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/sliding"
        android:orientation="vertical">
        
        <RelativeLayout 
            android:id="@+id/userInfo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
            android:id="@+id/avatar_tv"
            android:layout_width="85dp"
            android:layout_height="85dp"/>
            
            <TextView
            android:id="@+id/username_tv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/avatar_tv"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/username_et"/>
            
            <TextView
            android:id="@+id/userID_tv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/username_tv"
            android:layout_toRightOf="@+id/avatar_tv"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textSize="15sp"
            android:text="@string/userID_tv"/>
            
            
        </RelativeLayout>
                      

        
        <ListView
            android:id="@+id/form_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="#000000"
            android:dividerHeight="2dp" >
        </ListView>
        
    </LinearLayout>
    
</android.support.v4.widget.DrawerLayout>
